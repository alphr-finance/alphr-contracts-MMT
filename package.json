{
  "name": "alphr-manual-trade",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "node": "hardhat node",
    "deploy": "truffle migrate",
    "test": "hardhat test",
    "build": "hardhat compile",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:js": "eslint test/**/*.js migrations/**/*.js",
    "fix:js": "eslint test/**/*.js migrations/**/*.js --fix",
    "fix:sol": "prettier --write 'contracts/**/*.sol'"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-angular": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@openzeppelin/truffle-upgrades": "^1.6.0",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-log-remover": "^2.0.1",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "web3": "^1.3.5"
  },
  "dependencies": {
    "@eth-optimism/smock": "^1.1.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@truffle/hdwallet-provider": "^1.3.0",
    "@typechain/ethers-v5": "^2.0.0",
    "@typechain/truffle-v5": "^4.0.1",
    "@typechain/web3-v1": "^2.2.0",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "hardhat-typechain": "^0.3.5",
    "husky": "^6.0.0",
    "openzeppelin-solidity": "^4.1.0",
    "ts-generator": "^0.1.1",
    "typechain": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:js && yarn lint:sol",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
